FROM --platform=linux/amd64 golang:latest

ARG _DB_HOST
ARG _DB_DATABASE
ARG _DB_USER
ARG _DB_PASSWORD
ARG _DB_PORT
ARG _API_PORT

ENV DBHOST $_DB_HOST
ENV DBNAME $_DB_DATABASE
ENV DBUSER $_DB_USER
ENV DBPASSWORD $_DB_PASSWORD
ENV DBPORT $_DB_PORT

WORKDIR /go/api

ADD . /go/api

CMD ["go","run","server.go"]
